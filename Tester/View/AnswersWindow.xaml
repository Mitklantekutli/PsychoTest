<Window x:Class="Tester.View.AnswersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tester.View"
        mc:Ignorable="d"
        Title="AnswersWindow" WindowState="Maximized" Height="300" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="946*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Click="Button_Click_1">Сохранить</Button>
            <Button Click="Button_Click">Отмена</Button>
        </StackPanel>
        <DataGrid HorizontalAlignment="Left" Width="109" Grid.Row="1" ItemsSource="{Binding Answers}"/>
    </Grid>
</Window>
