<Window x:Class="Tester.Question"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tester"
        mc:Ignorable="d"
        Title="Question" Height="210.84" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">
        <Label Margin="0, 15" Content="{Binding Story}"></Label>
        <Label Content="{Binding Info}"></Label>
        <TextBox Margin="0,10" ForceCursor="True" Text="{Binding Answer}" TextChanged="TextBoxBase_OnTextChanged"></TextBox>
        <Button Height="30" Width="60" Click="Button_Click">Ок</Button>
    </StackPanel>
</Window>
